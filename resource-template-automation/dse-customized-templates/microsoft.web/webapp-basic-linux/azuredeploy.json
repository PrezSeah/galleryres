{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webAppName": {
      "type": "string",
      "defaultValue": "AzureLinuxApp",
      "metadata": {
        "description": "Base name of the resource such as web app name and app service plan "
      },
      "minLength": 2
    },
    "sku": {
      "type": "string",
      "defaultValue": "B1",
      "allowedValues": [
          "F1",
          "D1",
          "B1",
          "B2",
          "B3",
          "S1",
          "S2",
          "S3",
          "P1",
          "P2",
          "P3",
          "P4"
      ],
      "metadata": {
        "description": "The SKU of App Service Plan "
      }
    },
    "linuxFxVersion": {
      "type": "string",
      "defaultValue": "PYTHON|3.8",
      "metadata": {
        "description": "The Runtime stack of current web app"
      }
    },
    "location": {
      "type": "string",
      "allowedValues": [
        "northeurope",
        "westeurope"
      ],
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "Tagging - CUST-CODE": {
        "type": "string",
        "defaultValue": "",
        "metadata": {
            "description": "Tagging value for CUST-CODE"
        }
    },
    "Tagging - OWNER": {
        "type": "string",
        "defaultValue": "",
        "metadata": {
            "description": "Tagging value for OWNER"
        }
    },
    "Tagging - RESOURCE-GROUP": {
        "type": "string",
        "defaultValue": "",
        "metadata": {
            "description": "Tagging value for RESOURCE-GROUP"
        }
    },
    "Tagging - HUB-DATASCIENCE-FUNCTION": {
        "type": "string",
        "allowedValues": ["MARKETING",
          "LEX",
          "CORPORATE",
          "FINANCE",
          "OPERATIONS",
          "PROCUREMENT",
          "R&D"
        ],
        "metadata": {
            "description": "Tagging value for HUB-DATASCIENCE-FUNCTION"
        }
    },
    "Tagging - SPOKE-DATASCIENCE-FUNCTION": {
        "type": "string",
        "allowedValues": ["MARKETING",
          "LEX",
          "CORPORATE",
          "FINANCE",
          "OPERATIONS",
          "PROCUREMENT",
          "R&D"
        ],
        "metadata": {
            "description": "Tagging value for SPOKE-DATASCIENCE-FUNCTION"
        }
    },
    "Tagging - HUB-DATASCIENCE-USECASE": {
        "type": "string",
        "allowedValues": ["LEX-BRZ-AIT",
          "MARKETING-BRZ-SOQ",
          "MARKETING-AUS-PRICING-SOLUTION"
        ],
        "metadata": {
            "description": "Tagging value for HUB-DATASCIENCE-USECASE"
        }
    },
    "Tagging - SPOKE-DATASCIENCE-USECASE": {
        "type": "string",
        "allowedValues": ["LEX-BRZ-AIT",
          "MARKETING-BRZ-SOQ",
          "MARKETING-AUS-PRICING-SOLUTION"
        ],
        "metadata": {
            "description": "Tagging value for SPOKE-DATASCIENCE-USECASE"
        }
    },
    "Tagging - SPOKE": {
        "type": "string",
        "allowedValues": ["BRZ",
          "ZRF",
          "MYS"
        ],
        "metadata": {
            "description": "Tagging value for SPOKE, guide here: https://en.wikipedia.org/wiki/List_of_ISO_3166_country_codes"
        }
    }
  },
  "variables": {
    "webAppPortalName": "[concat(parameters('webAppName'), '-webapp')]",
    "appServicePlanName": "[concat('AppServicePlan-', parameters('webAppName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2020-06-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[parameters('location')]",
      "Tagging - CUST-CODE": {
          "type": "string",
          "defaultValue": "",
          "metadata": {
              "description": "Tagging value for CUST-CODE"
          }
      },
      "Tagging - OWNER": {
          "type": "string",
          "defaultValue": "",
          "metadata": {
              "description": "Tagging value for OWNER"
          }
      },
      "Tagging - RESOURCE-GROUP": {
          "type": "string",
          "defaultValue": "",
          "metadata": {
              "description": "Tagging value for RESOURCE-GROUP"
          }
      },
      "Tagging - HUB-DATASCIENCE-FUNCTION": {
          "type": "string",
          "allowedValues": ["MARKETING",
            "LEX",
            "CORPORATE",
            "FINANCE",
            "OPERATIONS",
            "PROCUREMENT",
            "R&D"
          ],
          "metadata": {
              "description": "Tagging value for HUB-DATASCIENCE-FUNCTION"
          }
      },
      "Tagging - SPOKE-DATASCIENCE-FUNCTION": {
          "type": "string",
          "allowedValues": ["MARKETING",
            "LEX",
            "CORPORATE",
            "FINANCE",
            "OPERATIONS",
            "PROCUREMENT",
            "R&D"
          ],
          "metadata": {
              "description": "Tagging value for SPOKE-DATASCIENCE-FUNCTION"
          }
      },
      "Tagging - HUB-DATASCIENCE-USECASE": {
          "type": "string",
          "allowedValues": ["LEX-BRZ-AIT",
            "MARKETING-BRZ-SOQ",
            "MARKETING-AUS-PRICING-SOLUTION"
          ],
          "metadata": {
              "description": "Tagging value for HUB-DATASCIENCE-USECASE"
          }
      },
      "Tagging - SPOKE-DATASCIENCE-USECASE": {
          "type": "string",
          "allowedValues": ["LEX-BRZ-AIT",
            "MARKETING-BRZ-SOQ",
            "MARKETING-AUS-PRICING-SOLUTION"
          ],
          "metadata": {
              "description": "Tagging value for SPOKE-DATASCIENCE-USECASE"
          }
      },
      "Tagging - SPOKE": {
          "type": "string",
          "allowedValues": ["BRZ",
            "ZRF",
            "MYS"
          ],
          "metadata": {
              "description": "Tagging value for SPOKE, guide here: https://en.wikipedia.org/wiki/List_of_ISO_3166_country_codes"
          }
      },
      "sku": {
        "name": "[parameters('sku')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2020-06-01",
      "name": "[variables('webAppPortalName')]",
      "location": "[parameters('location')]",
      "kind": "app",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "[parameters('linuxFxVersion')]"
        }
      }
    }
  ]
}
